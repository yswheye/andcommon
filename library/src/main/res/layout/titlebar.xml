<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/titlebar_layout"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/titlebar_height" >

    <LinearLayout
        android:id="@+id/titlebar_left_layout"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:gravity="center"
        android:minWidth="@dimen/titlebar_item_width"
        android:orientation="horizontal" />

    <LinearLayout
        android:id="@+id/titlebar_right_layout"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:minWidth="@dimen/titlebar_item_width"
        android:orientation="horizontal" />
    
    <TextView
        android:id="@+id/titlebar_title"
        style="@style/TitleBarMiddleText"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/titlebar_left_layout"
        android:layout_toLeftOf="@+id/titlebar_right_layout"
        android:text="标题" />

</RelativeLayout>